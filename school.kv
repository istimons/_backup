ScreenManager:
    LogInScreen:
    CatalogSearchScreen:
    LibraryDashboardScreen:
    PasswordPhoneUpdateScreen:

<PasswordUpdateDialog>:
    title: "Update Password"
    size_hint: (0.8, 0.18)
    update_password: update_password

    MDBoxLayout:
        orientation: "vertical"

        TextInput:
            id: update_password
            password: True
            size_hint: (1, 0.01)

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint: (1, 0.01)

            Button:
                size_hint: dp(1), None
                text: "close"
                icon: "update"
                size_hint: (1, 0.01)
                on_press:
                    root.dismiss()

            Button:
                size_hint: dp(1), None
                text: "update"
                size_hint: (1, 0.01)
                on_press:
                    root.get_pass_update()
                    root.dismiss()

<PhoneUpdateDialog>:
    title: "Update Phone"
    size_hint: (0.8, 0.18)

    update_phone: update_phone

    MDBoxLayout:
        orientation: "vertical"

        TextInput:
            id: update_phone
            size_hint: (1, 0.01)

        MDGridLayout:
            cols: 2
            rows: 1
            size_hint: (1, 0.01)

            Button:
                size_hint: dp(1), None
                text: "close"
                icon: "update"
                size_hint: (1, 0.01)
                on_press:
                    root.dismiss()

            Button:
                size_hint: dp(1), None
                text: "update"
                size_hint: (1, 0.01)
                on_press:
                    root.get_phone_update()
                    root.dismiss()

<Footer@MDGridLayout>:
    cols: 9
    pos_hint: {'center_x': 0.501, 'center_y': 0}
    size_hint: (0.9, 0.08)

    canvas.before:
        Color:
            rgba: 0, 0, 0, 2
        Line:
            width: 0.5
            rectangle: (self.x-4, self.y-8, self.width+8, self.height)
    Label:
        size_hint: 0.1, 0

    MDRoundFlatIconButton:
        icon: 'home'
        on_press:
            app.switch_to_dashboard_screen()

    Label:
        size_hint: 4.0, 0

    MDRoundFlatIconButton:
        icon: 'logout'
        on_press:
            app.switch_log_in_screen()

    Label:
        size_hint: 4.0, 0

    MDRoundFlatIconButton:
        icon: 'book-open-page-variant'
        custom_color: 1, 1, 1, 1

    Label:
        size_hint: None, 0

    MDRoundFlatIconButton:
        icon: 'account'
        on_press:
            app.switch_to_password_screen()

    Label:
        size_hint: 0.1, 0.06



<LogInScreen>:
    name: "LogInScreen"
    password_entered: password_entered
    student_id: student_id

    MDBoxLayout:
        orientation: 'vertical'

        FitImage:
            source: 'images/mainLogin.png'

    MDBoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: "24dp", "24dp", "24dp", "32dp"
        pos_hint: {"center_x": .5, "center_y": .4}
        spacing: "12dp"
        size_hint_x: .75

        canvas:
            Color:
                rgba: 1, 1, 1, 0
            Rectangle:
                pos: self.pos
                size: self.size

        MDTextField:
            id: student_id
            hint_text: "PERSON ID"
            required: True

        MDTextField:
            id: password_entered
            hint_text: "password"
            password: True
            required: True
#            input_filter: "float"

        MDRoundFlatButton:
            text: "Log In"
            pos_hint: {"center_x": .5}
            md_bg_color: 0, 1, 1, .5
            on_release:
                root.get_user_password()

    MDBoxLayout:
        pos_hint: {"center_x": .5, "y": .03}

        canvas:
            Color:
                rgba: 1, 1, 1, 5
            Ellipse:
                pos: 20, 990
                size: 200 , 200
                source: 'avatar.png'
                angle_start: 0
                angle_end: 360

<CatalogData>:

    d_auth_name: ''
    d_book_title: ''

    MDGridLayout:
        cols:3
        padding: 100
        spacing: 50

        Image:
            source:'avatar.png'
            allow_stretch: True
            size_hint: dp(0.1), dp(2)


        MDBoxLayout:
            orientation: 'vertical'

            MDLabel:
                markup: True

                text: "[b]" + root.d_book_title + "[/b]"


            MDLabel:
                text: root.d_auth_name

        MDRoundFlatIconButton:
            size_hint_x: 0.2
            icon: 'plus'


<SelectableButton>:
    # Draw a bg to indicate selection
    canvas.before:
        Color:
            rgba: (0, 0, 0, 0)
#            rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)

        Rectangle:
            pos: self.pos
            size: self.size

    MDRoundFlatIconButton:
        icon: "add"
        size_hint_x: None
        width: sp(34)


<CatalogSearchScreen>:

    name: 'CatalogSearchScreen'

    CatalogSearchBoxScreen:

<CatalogSearchBoxScreen>:
    orientation: 'vertical'
    height: "20dp"
    adaptive_height: True

    search_input: search_input

    Label:
        size_hint: 1, 0.05

    MDGridLayout:
        cols: 3
        padding: 10
        spacing: 0.01

        pos_hint: {'center_x': 0.5, 'center_y': 20}
        size_hint: (0.8, 0.09)

        MDTextFieldRound:
            id: search_input
            size_hint: 0.7, 0.1
            pos_hint: {'center_x': 0.5, 'center_y': 1}
            on_text:
                root.set_items_list(self.text, True)

        FloatLayout:
            size_hint: (None, None)
            size: (5, 5)
            MDIconButton:
                icon: 'book-search'
                pos_hint: {'center_x': 0.000001, 'center_y': 7}

    MDLabel:
        markup: True
        text: ''
        size_hint: 1, 0.0001
        theme_text_color: "Custom"
        text_color: 1, 0, 0, 1

    RecycleView:
        id: search_results_list
        viewclass: 'CatalogData'
        key_size: 'height'

        do_scroll_y: True
        do_scroll_x: False

        SelectableRecycleBoxLayout:

            default_size: None, dp(85)
            default_size_hint: 1, None

            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(2)
            padding: dp(2)


    MDLabel:
        size_hint: 1, 0.02

    Footer:
    Label:
        size_hint: 1, 0.02


<LibraryDashboardScreen>:

    name: 'LibraryDashboardScreen'

    LibraryDashboardBoxScreen:

<LibraryDashboardBoxScreen>:
    id: lib_notification_holder
    orientation: 'vertical'
    height: "40dp"
    adaptive_height: True

    Label:
        size_hint: 1, 0.05

    MDGridLayout:
        cols: 3
        rows: 2
        padding: 10
        spacing: 0.01

        pos_hint: {'center_x': 0.5, 'center_y': 20}
        size_hint: (0.8, 0.09)

        MDTextFieldRound:
            id: lib_search_input
            size_hint: 0.05, 0.1
            pos_hint: {'center_x': 0.9, 'center_y': 1}
            hint_text: 'CATALOG SEARCH'
            text_size: None, None


        FloatLayout:
            size_hint: (None, None)
            size: (5, 5)
            MDIconButton:
                icon: 'book-search'
                pos_hint: {'center_x': 0.000001, 'center_y': 7}
                on_press:
                    root.search_cloud_data()
                    app.root.transition = RiseInTransition(duration=0.2)
                    app.switch_to_catalog_screen()

    MDGridLayout:
        id: notification_field
        cols: 3
        rows: 2
        padding: 100
        spacing: 50

        pos_hint: {'center_x': 0.501, 'center_y': 0}
        size_hint: (1, 0.9)

        MDGridLayout:
            cols: 2
            rows: 1

            Image:
                source: 'images/borrowedbooks.png'
                allow_stretch: True
                width: 200
                height: 200

            Label:
                text: '2'
                size_hint:(0.1, 2)
                color: 1,0,1,1

        MDLabel:
            size_hint_x: 0

        MDGridLayout:
            cols: 2
            rows: 1

            Image:
                source: 'images/group.png'
                allow_stretch: True
                width: 200
                height: 200

            Label:
                text: '0'
                size_hint:(0.08, 3)
                color: 1,0,1,1

        MDLabel:
            size_hint_x: 0


        MDGridLayout:
            cols: 2
            rows: 1

            Image:
                source: 'images/booksready.png'
                allow_stretch: True
                width: 200
                height: 200

            Label:
                text: '3'
                size_hint:(0.1, 0.05)
                color: 1,0,1,1

    Label:
        size_hint: 1, 0.05


    Footer:
    Label:
        size_hint: 1, 0.02


<PasswordPhoneUpdateScreen>:

